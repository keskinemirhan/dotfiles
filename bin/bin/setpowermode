#/bin/bash
sudo -u root bash  << caleo  
setpowermode(){
    if [ "$1" = "performance" ]; then
        x86_energy_perf_policy --all balance-performance
        brightnessctl set 50%
        iw dev wlp0s20f3 set power_save off
        echo "default" > /sys/module/pcie_aspm/parameters/policy
    elif [ "$1" = "power" ]; then
        x86_energy_perf_policy --all balance-power
        brightnessctl set 25%
        rfkill block bluetooth
        iw dev wlp0s20f3 set power_save on
        echo "powersupersave" > /sys/module/pcie_aspm/parameters/policy
    else
        echo "[function] Choose either performance or power" >&2
    fi
}

if [ "$1" = "auto" ]; then
    acpi -b | awk -F'[,:%]' '{print $2, $3}' | {
        read -r status capacity

        if [ "$status" = Discharging -a "$capacity" -lt 5 ]; then
            logger "Critical battery threshold"
            systemctl hibernate
        elif [ "$status" = Discharging -o "$capacity" -lt 91 ]; then
            logger "Switching to power saving mode"
            setpowermode power
        elif [ "$status" = Charging -o "$capacity" -gt 90 ]; then
            logger "Switching to power saving mode"
            setpowermode performance
        fi
    }
elif [ "$1" = "performance" -o "$1" = "power" ]; then
    setpowermode $1
else
    echo "Choose either performance, power or auto"
fi

caleo
